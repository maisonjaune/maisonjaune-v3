{% extends ea.templatePath('crud/edit') %}

{% block content_title %}
    {%- apply spaceless -%}
        {% trans %}Decorate Post{% endtrans %}
    {%- endapply -%}
{% endblock %}

{% block page_actions %}
    <button class="btn btn-primary action-save" type="submit" form="post-form">
        <span class="btn-label"><span class="action-label">{% trans %}Decorate Post{% endtrans %}</span></span>
    </button>
{% endblock %}

{% block main %}
    {{ form_start(edit_form, { attr: { id: 'post-form' }}) }}

    <div class="row">
        {% embed "@EasyAdmin/form/column.html.twig" with { col: 12 } %}
            {% block column_body %}
                {{ entity.instance.title }}
            {% endblock %}
        {% endembed %}
    </div>

    <div class="row">
        {% embed "@EasyAdmin/form/column.html.twig" with { col: 12 } %}
            {% block column_body %}
                {% embed "@EasyAdmin/form/fieldset.html.twig" %}
                    {% block fieldset_body %}
                        {{ entity.instance.excerpt }}
                        {{ entity.instance.content }}
                    {% endblock %}
                {% endembed %}
            {% endblock %}
        {% endembed %}
    </div>

    {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}
{% endblock %}
